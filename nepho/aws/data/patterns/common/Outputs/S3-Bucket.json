    {%- macro bucket(name) -%}
    
    "{{ name }}Name" : {
      "Value" : {"Ref" : "{{ name }}"},
      "Description" : "Name of S3 bucket."
    },
    
    "{{ name }}WebsiteURL" : {
      "Value" : { "Fn::GetAtt" : [ "{{ name }}", "WebsiteURL" ] },
      "Description" : "URL for website hosted on S3"
    },
   
    "S3BucketSecureURL" : {
      "Value" : { "Fn::Join" : [
         "", [ "https://", { "Fn::GetAtt" : [ "{{ name }}", "DomainName" ] } ]
      ] },
      "Description" : "Name of S3 bucket to hold website content"
    }
       
    {% endmacro %}